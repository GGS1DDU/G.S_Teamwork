package elms.presentation.financeui.Init;

import java.awt.Dimension;
import java.awt.Toolkit;

import javax.swing.JButton;
import javax.swing.JFrame;

public class Init extends JFrame{
	Toolkit kit=Toolkit.getDefaultToolkit();
	Dimension screenSize=kit.getScreenSize();
	int screenWidth=(int) screenSize.getWidth();
	int screenHeight=(int)screenSize.getHeight();
	public static void main(String[] args) {
	new Init();
	}
	public Init(){
		setLayout(null);
		setTitle("账目初始化");
		setResizable(false);
		setBounds(screenWidth/4,screenHeight/4, screenWidth/3, 3*screenHeight/8);
		setVisible(true);
		
		
		JButton  init=new JButton("初始化库存");
		JButton  copy=new JButton("备份库存");
		JButton  surf=new JButton("历史查看");
		add(init);add(copy);add(surf);
		init.setBounds(this.getWidth()/3,this.getHeight()/6,100,30);
		copy.setBounds(this.getWidth()/3,this.getHeight()/3+30,100,30);
		surf.setBounds(this.getWidth()/3,2*this.getHeight()/3,100,30);
	}

}
